<section id="post">
  <p id="notice"><%= notice %></p>
  
  <article class="post">
    <header>
      <h2><%= @post.title %></h2>
      <p>
        <%= link_to '7even', '/7even' %> @
        <time datetime="<%= @post.created_at.strftime('%Y-%m-%dT%H:%M') %>">
          <%= @post.created_at.strftime('%Y.%m.%d %H:%M') %>
        </time>
      </p>
    </header>
    
    <%= textilize(@post.body) %>
    
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </article>
</section>
