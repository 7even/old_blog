<section id="authentication">
  <h1>Вход</h1>
  <%= form_tag do %>
    <p>
      <%= label_tag :email, t('attributes.user.email') %>
      <%= text_field_tag :email %>
    </p>
    <p>
      <%= label_tag :password, t('attributes.user.password') %>
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= submit_tag t('users.login') %>
    </p>
  <% end %>
</section>
